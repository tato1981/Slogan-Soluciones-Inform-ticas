---
// Sección principal de la página - Solo Tailwind CSS
---

<section id="inicio" class="min-h-screen flex items-center justify-center relative overflow-hidden">
  <!-- Background effects -->
  <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-purple-900 to-cyan-900 opacity-80"></div>
  <div class="absolute inset-0 bg-gradient-to-r from-cyan-500/10 via-transparent to-blue-500/10"></div>
  
  <!-- Grid pattern -->
  <div class="absolute inset-0 opacity-20">
    <div class="absolute inset-0 bg-[linear-gradient(rgba(0,243,255,0.1)_1px,transparent_1px),linear-gradient(90deg,rgba(0,243,255,0.1)_1px,transparent_1px)] bg-[size:64px_64px] [mask-image:radial-gradient(ellipse_80%_50%_at_50%_50%,black,transparent)]"></div>
  </div>
  
  <!-- Animated orbs -->
  <div class="absolute top-1/4 left-1/4 w-64 h-64 bg-cyan-500 rounded-full mix-blend-screen filter blur-3xl opacity-20 animate-pulse"></div>
  <div class="absolute bottom-1/4 right-1/4 w-96 h-96 bg-purple-500 rounded-full mix-blend-screen filter blur-3xl opacity-15 animate-pulse animation-delay-1000"></div>
  <div class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-80 h-80 bg-blue-500 rounded-full mix-blend-screen filter blur-3xl opacity-10 animate-pulse animation-delay-2000"></div>

  <div class="container mx-auto px-4 py-16 text-center relative z-10">
    <!-- Main heading -->
    <div class="mb-8">
      <h1 class="text-4xl md:text-6xl lg:text-7xl font-bold mb-6 text-cyan-300 glow-text">
        SLOGAN 
        <span class="text-transparent bg-clip-text bg-gradient-to-r from-cyan-400 to-blue-500">
          SOLUCIONES
        </span>
      </h1>
      
      <div class="w-24 h-1 bg-gradient-to-r from-cyan-500 to-blue-500 mx-auto mb-6 rounded-full"></div>
      
      <p class="text-xl md:text-2xl mb-8 max-w-3xl mx-auto text-cyan-100 leading-relaxed">
        Más de <span class="font-bold text-cyan-300">10 años</span> de experiencia brindando 
        <span class="text-cyan-300"> soluciones tecnológicas </span> 
        innovadoras para tu negocio
      </p>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row justify-center gap-4 mt-10 mb-16">
      <a 
        href="#services" 
        class="bg-gradient-to-r from-cyan-500 to-blue-500 hover:from-cyan-600 hover:to-blue-600 text-gray-900 font-bold py-4 px-8 rounded-lg transition-all duration-300 transform hover:scale-105 hover:shadow-2xl hover:shadow-cyan-500/25 relative overflow-hidden group"
      >
        <div class="absolute inset-0 bg-gradient-to-r from-transparent via-white/20 to-transparent -translate-x-full group-hover:translate-x-full transition-transform duration-1000"></div>
        <span class="flex items-center justify-center space-x-2 relative z-10">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
          </svg>
          <span class="text-lg">Nuestros Servicios</span>
        </span>
      </a>
      
      <a 
        href="#contact" 
        class="border-2 border-cyan-500 text-cyan-300 hover:bg-cyan-500/10 hover:text-cyan-100 hover:border-cyan-400 transition-all duration-300 font-bold py-4 px-8 rounded-lg text-lg relative overflow-hidden group"
      >
        <div class="absolute inset-0 bg-cyan-500/5 group-hover:bg-cyan-500/10 transition-colors duration-300"></div>
        <span class="flex items-center justify-center space-x-2 relative z-10">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
          </svg>
          <span>Contáctanos</span>
        </span>
      </a>
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 max-w-2xl mx-auto mb-16">
      <div class="text-center group hover:scale-110 transition-transform duration-300">
        <div class="text-3xl md:text-4xl font-bold text-cyan-300 mb-2">10+</div>
        <div class="text-cyan-100 text-sm md:text-base">Años Experiencia</div>
      </div>
      <div class="text-center group hover:scale-110 transition-transform duration-300">
        <div class="text-3xl md:text-4xl font-bold text-cyan-300 mb-2">100+</div>
        <div class="text-cyan-100 text-sm md:text-base">Proyectos</div>
      </div>
      <div class="text-center group hover:scale-110 transition-transform duration-300">
        <div class="text-3xl md:text-4xl font-bold text-cyan-300 mb-2">50+</div>
        <div class="text-cyan-100 text-sm md:text-base">Clientes</div>
      </div>
      <div class="text-center group hover:scale-110 transition-transform duration-300">
        <div class="text-3xl md:text-4xl font-bold text-cyan-300 mb-2">24/7</div>
        <div class="text-cyan-100 text-sm md:text-base">Soporte</div>
      </div>
    </div>

    <!-- Tech icons floating -->
    <div class="flex justify-center space-x-8 md:space-x-16 opacity-70">
      <div class="text-4xl md:text-5xl hover:scale-110 hover:opacity-100 transition-all duration-300 transform hover:rotate-12">🌐</div>
      <div class="text-4xl md:text-5xl hover:scale-110 hover:opacity-100 transition-all duration-300 transform hover:-rotate-12">🔒</div>
      <div class="text-4xl md:text-5xl hover:scale-110 hover:opacity-100 transition-all duration-300 transform hover:rotate-12">⚛️</div>
      <div class="text-4xl md:text-5xl hover:scale-110 hover:opacity-100 transition-all duration-300 transform hover:-rotate-12">📱</div>
      <div class="text-4xl md:text-5xl hover:scale-110 hover:opacity-100 transition-all duration-300 transform hover:rotate-12">🚀</div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <a 
        href="#servicios" 
        class="w-10 h-16 rounded-full border-2 border-cyan-500 flex justify-center group hover:border-cyan-300 transition-colors duration-300"
      >
        <div class="w-1 h-3 bg-cyan-500 rounded-full mt-2 group-hover:bg-cyan-300 group-hover:scale-110 transition-all duration-300 animate-pulse"></div>
      </a>
    </div>
  </div>
</section>

<style>
  /* Solo las animaciones necesarias que no están en Tailwind */
  .animation-delay-1000 {
    animation-delay: 1s;
  }
  .animation-delay-2000 {
    animation-delay: 2s;
  }
</style>