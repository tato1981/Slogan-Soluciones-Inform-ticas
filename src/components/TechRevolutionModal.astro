<script>
  // TypeScript-compatible JavaScript - Modal siempre visible
  (function() {
    'use strict';

    // Elementos del DOM
    const elements = {
      modal: document.getElementById('techRevolutionModal'),
      closeButton: document.getElementById('closeButton'),
      ctaButton: document.getElementById('ctaButton'),
      closeModalButton: document.getElementById('closeModalButton')
    };

    // Funci√≥n para mostrar el modal
    function showModal() {
      if (elements.modal) {
        elements.modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden';
      }
    }

    // Funci√≥n para cerrar el modal
    function closeModal() {
      if (elements.modal) {
        elements.modal.classList.add('hidden');
        document.body.style.overflow = 'auto';
        // NO guardamos en localStorage para que siempre se muestre
      }
    }

    // Funci√≥n para redirigir a contacto
    function redirectToContact() {
      closeModal();
      // Esperar un poco para que el modal se cierre antes de redirigir
      setTimeout(() => {
        const contactSection = document.getElementById('contacto');
        if (contactSection) {
          contactSection.scrollIntoView({ 
            behavior: 'smooth',
            block: 'start'
          });
        } else {
          // Fallback: redirigir al inicio si no encuentra la secci√≥n
          window.location.href = '/#contacto';
        }
      }, 300);
    }

    // Inicializar eventos cuando el DOM est√© listo
    document.addEventListener('DOMContentLoaded', () => {
      // MOSTRAR SIEMPRE EL MODAL - Eliminada la verificaci√≥n de localStorage
      setTimeout(showModal, 2000);

      // Event listeners para los botones
      if (elements.closeButton) {
        elements.closeButton.addEventListener('click', closeModal);
      }

      if (elements.ctaButton) {
        elements.ctaButton.addEventListener('click', redirectToContact);
      }

      if (elements.closeModalButton) {
        elements.closeModalButton.addEventListener('click', closeModal);
      }

      // Cerrar modal con ESC
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && elements.modal && !elements.modal.classList.contains('hidden')) {
          closeModal();
        }
      });

      // Cerrar modal haciendo click fuera del contenido
      if (elements.modal) {
        elements.modal.addEventListener('click', (e) => {
          if (e.target === elements.modal) {
            closeModal();
          }
        });
      }
    });

    // Exponer funciones globalmente para acceso desde HTML
    window.closeModal = closeModal;
    window.redirectToContact = redirectToContact;

  })();
</script>

